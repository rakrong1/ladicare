{
  "name": "ladicare-backend",
  "version": "1.0.0",
  "description": "Ladicare ecommerce backend API with modern ES6+ modules",
  "type": "module",
  "main": "src/server.mjs",
  "scripts": {
    "dev": "nodemon src/server.mjs",
    "start": "node src/server.mjs",
    "build": "echo 'No build step required for backend'",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js"
  },
  "sequelize": {
    "config": "backend/config/config.js",
    "models-path": "backend/models",
    "migrations-path": "backend/migrations",
    "seeders-path": "backend/seeders"
  },
  "keywords": [
    "ecommerce",
    "nodejs",
    "express",
    "postgresql",
    "sequelize",
    "modern-javascript",
    "es6-modules"
  ],
  "author": "Ladicare Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "react-icons": "^5.5.0",
    "sequelize": "^6.37.7",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "no-console": "off",
      "consistent-return": "off"
    }
  }
}
